@model MvcWeb.Models.SubmittedArticle
@{
    ViewBag.Title = "Thank You";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="card-title mb-4">Thank You!</h1>
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success fa-5x"></i>
                    </div>
                    <p class="card-text mb-4">
                        Your article "@Model.Submission.Title" has been submitted successfully!
                    </p>
                    <p class="card-text mb-4">
                        Our editors will review your submission and get back to you soon.
                    </p>
                    <p class="card-text text-muted mb-4">
                        Submission ID: @Model.Id
                    </p>
                    <a href="/" class="btn btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>